<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    tool:contetext=".Encuesta"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:weightSum="1"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/lyControles">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/tvPregunta" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <RadioGroup
                android:id="@+id/rgTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/fbplacename"
                android:visibility="visible"
                android:clickable="true">

                <RadioButton
                    android:id="@+id/rbA"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="Pago TC" />



                
                <RadioButton
                    android:id="@+id/rbB"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="Retiro (Ingresar Monto Max.)"
                    android:enabled="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp">
                    <EditText
                        android:layout_width="89dp"
                        android:layout_height="36dp"


                        style="@style/TextLogin"

                        android:textSize="15sp"
                        android:id="@+id/etComentario"
                        android:inputType="numberDecimal"
                        android:enabled="false" />
                </LinearLayout>
                <RadioButton
                    android:id="@+id/rbC"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="DepÃ³sito" />

                <RadioButton
                    android:id="@+id/rbD"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="Pago de servicio" />

            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="56dp">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GUARDAR ENCUESTA"
                android:id="@+id/btGuardar"
                android:drawableRight="@drawable/ic_sync"
                style="@style/BottonBase" />

        </LinearLayout>

    </LinearLayout>



</ScrollView>